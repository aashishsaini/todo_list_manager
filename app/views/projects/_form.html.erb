<%= form_for @project do |f| %>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description ,class: "form-control" , resize: 'none' %>
  </div>
  <%= submit_tag 'Submit', class: 'btn btn-primary' %>
<% end %>